doctype html
html(lang='en')
  head
    title Blogger | #{title}
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css", integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf", crossorigin="anonymous")
  body
    div(class='container-fluid', style='max-width: 720px; margin: 0 auto;')
      div(class='row', style='margin-bottom: 32px')
        block navbar
          nav.navbar.navbar-expand-sm.navbar-light.bg-light
            .container-fluid
              a.navbar-brand(href='/') Blogger
              button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
              #navbarNav.collapse.navbar-collapse
                ul.navbar-nav(style='width: 100%')
                  li.nav-item
                    a.nav-link(href='/objave') Objave
                  li.nav-item
                    a.nav-link(href='/korisnici') Korisnici

                  if korisnickoIme
                    li.nav-item(style='display: block; margin-right: 8px')
                      a.btn.btn-outline-primary(href="/korisnik/"+korisnickoIme) Moj profil: #{korisnickoIme}
                    li.nav-item
                      form(action="/logout" method="post")
                        button.btn.btn-primary(type='submit') Izloguj se
                  else
                    li.nav-item
                      a.nav-link(href='/login') Uloguj se
                    li.nav-item
                      a.nav-link(href='/register') Registruj se
                  

      div.row
        block content